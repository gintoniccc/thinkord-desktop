{
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always", {
            "omitLastInOneLineBlock": true
        }],
        "eol-last": ["error", "always"],
        "no-duplicate-imports": ["error", {
            "includeExports": true
        }],
        "space-before-blocks": "error"
    }
}